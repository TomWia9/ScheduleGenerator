@using ScheduleGenerator.Client.Services
@inject IAuthenticationService AuthenticationService
@inject NavigationManager Navigation

@if (AuthenticationService.IsUserLoggedIn())
{
    <NavLink class="nav-link text-white" href="authentication/profile">
        Hello, @AuthenticationService.User.Email!
    </NavLink>

    <NavLink class="nav-link text-white" href="authentication/logout">
        Logout
    </NavLink>
}
else
{
    <NavLink class="nav-link text-white" href="authentication/register">
        Register
    </NavLink>

    <NavLink class="nav-link text-white" href="authentication/login">
        Log in
    </NavLink>
}