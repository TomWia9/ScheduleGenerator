@page "/"
@using ScheduleGenerator.Client.Services
@inject IAuthenticationService AuthenticationService


<div class="card text-center mt-4">
    @if (AuthenticationService.User != null)
    {
        <h4 class="card-header text-white" style="background: #052767;">Welcome @_email!</h4>
    }
    else
    {
        <h4 class="card-header text-white" style="background: #052767;">Welcome!</h4>
    }

</div>

@code {

    private string _email;

    protected override void OnInitialized()
    {
        @if (AuthenticationService.User != null)
        {
            _email = AuthenticationService.User.Email;
        }
    }

}